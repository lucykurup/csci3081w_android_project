<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/light_blue_background">

    <TextView
        android:id="@+id/affirmationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press the button for an affirmation"
        android:textSize="24sp"
        android:textColor="@color/dark_blue_text"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:lineSpacingMultiplier="1.5" />

    <Button
        android:id="@+id/getAffirmationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Affirmation"
        android:textSize="18sp"
        android:padding="16dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:backgroundTint="@color/medium_blue"
        android:textColor="@color/white" />

</LinearLayout>
